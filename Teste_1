#include <stdio.h>
#include <string.h>

// Documentação: Definição da struct Territorio.
// Esta estrutura agrupa dados relacionados a um território específico.
typedef struct {
    char nome[30];  // Nome do território (vetor de caracteres para string)
    char cor[10];   // Cor do exército que controla o território (vetor de caracteres para string)
    int tropas;     // Quantidade de tropas no território
} Territorio;

int main() {
    // Documentação: Declaração de um vetor de structs Territorio.
    // O vetor 'territorios' pode armazenar 5 estruturas do tipo Territorio.
    Territorio territorios[5];
    int i;

    // Documentação: Entrada de dados - Laço para preencher 5 territórios.
    // O loop 'for' itera 5 vezes para coletar as informações de cada território.
    for (i = 0; i < 5; i++) {
        printf("--- Cadastro do Territorio %d ---\n", i + 1);

        // Usabilidade: Mensagem clara para o usuário.
        printf("Digite o nome do territorio: ");
        // Leitura do nome com fgets para suportar espaços.
        fgets(territorios[i].nome, sizeof(territorios[i].nome), stdin);
        // Remove o caractere de nova linha que o fgets adiciona.
        territorios[i].nome[strcspn(territorios[i].nome, "\n")] = 0;

        // Usabilidade: Mensagem clara para o usuário.
        printf("Digite a cor do exercito: ");
        scanf("%s", territorios[i].cor);

        // Usabilidade: Mensagem clara para o usuário.
        printf("Digite a quantidade de tropas: ");
        scanf("%d", &territorios[i].tropas);
        
        // Limpa o buffer do teclado após ler um número.
        while (getchar() != '\n');
        
        printf("\n"); // Adiciona uma linha em branco para melhor legibilidade
    }

    // Documentação: Exibição dos dados - Percorre o vetor de structs.
    // Após o cadastro, este loop 'for' exibe os dados de todos os territórios registrados.
    printf("--- Territorios Registrados ---\n");
    for (i = 0; i < 5; i++) {
        printf("Territorio %d\n", i + 1);
        printf("Nome: %s\n", territorios[i].nome);
        printf("Cor: %s\n", territorios[i].cor);
        printf("Tropas: %d\n", territorios[i].tropas);
        printf("-----------------------------\n");
    }

    return 0;
}
